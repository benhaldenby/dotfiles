# Colima
Include ~/.colima/ssh_config

# All keys
Host *
  ~/.1password/agent.sock
  AddKeysToAgent yes
  UseKeychain yes

# Fig ssh integration. Keep at the bottom of this file.
Match all
  Include ~/.fig/ssh

# Hosts beyond this point are auto-generated by custom 1Password CLI script
Host github.com.ben
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_rsa_ben.pub
  IdentitiesOnly yes
Host bitbucket.org.ben
  HostName bitbucket.org
  User git
  IdentityFile ~/.ssh/id_rsa_ben.pub
  IdentitiesOnly yes
