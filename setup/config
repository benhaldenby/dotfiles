# 1Password ssh agent templates
# Use a local private key file that's not saved in 1Password
# Host ec2-server
#   HostName 54.123.45.67
#   User ec2-user
#   IdentityFile ~/.ssh/ssh-key-file.pem
#   IdentityAgent none

# Colima
Include ~/.colima/ssh_config

# By default, use the 1Password SSH agent for all hosts
Host *
  IdentityAgent ~/.1password/agent.sock
  AddKeysToAgent yes
  UseKeychain yes

# Fig ssh integration. Keep at the bottom of this file.
Match all
  Include ~/.fig/ssh

# Hosts beyond this point are auto-generated by custom 1Password CLI script

